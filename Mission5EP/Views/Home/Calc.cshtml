@{
    ViewData["Title"] = "Price Calculator";
}
<h1>@ViewData["Title"]</h1>

<p>Here is my Pricing Calculator</p>
<br />

<img src="/img/e4.jpg" alt="Embroidery 2" style="width: 500px; height: auto; margin-bottom: 20px;" />

<br />
<h1>
    Here you will be able to calculate for yourself how much my services would cost for tutoring about embroidery
</h1>

<br>
<br>

<fieldset style="border: 1px solid black; border-radius: 5px; padding: 10px; margin-bottom: 20px;">
    <legend>Pricing Calculator</legend>
    <div id="calculator">
        <label for="hours">Enter the number of hours:</label>
        <input type="number" id="hours" min="0" step="1" required onkeydown="return false;" />
        <br />
        <label for="rate">Rate per hour ($):</label>
        <input type="text" id="rate" value="20" readonly>
        <br>
        <button id="calculate">Calculate Total</button>
        <br>
        <label for="total">Total:</label>
        <input type="text" id="total" readonly>
    </div>
</fieldset>

<br />
<br>

<div style="display: flex; justify-content: center;">
    <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
</div>




